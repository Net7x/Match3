        app:layout_constraintEnd_toStartOf="@+id/expert_a5"
        app:layout_constraintTop_toTopOf="@+id/expert_view"
        android:contentDescription="@string/ball" />

    <ImageView
        android:id="@+id/master_a1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
